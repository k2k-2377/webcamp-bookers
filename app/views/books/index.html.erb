<p class="notice">
  <%= flash[:notice] %>
</p>

<h1>Books</h1>

<table>
  <thread>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thread>
  <tbody>

    <% @books.each do |book| %>
      <tr>
        <td class="book-title"><%= book.title %></td>
        <td class="book-body"><%= book.body %></td>
        <td><%= link_to "show", book_path(book.id) %></td>
        <td><%= link_to "edit", edit_book_path(book.id) %></td>
        <td><%= link_to "destroy", book_path(book.id), method: :delete %></td>
      <tr></tr>
    <% end %>

  </tbody>
</table>

<h2>New book</h2>
<!-- form_with部分 -->
<%= form_with model: @book, local:true do |f| %>

  <% if @book.errors.any? %>
    <div class="error_explaination">
      <h3><%= @book.errors.count %> error prohibited this book from being saved:</h3>
      <ul>
        <% @book.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <label for="book_title">Title</label>
    <%= f.text_field :title %>
  </div>

  
  <div class="field">
    <label for="book_body">Body</label>
    <%= f.text_area :body %>
  </div>
  
  <div class="actions">
    <%= f.submit 'Create Book' %>
  </div>
  
<% end %>