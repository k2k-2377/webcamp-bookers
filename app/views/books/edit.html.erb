<h1>Editing Book</h1>
<!-- form_with部分 -->
<%= form_with model: @book, local:true do |f| %>
  
  <% if @book.errors.any? %>
    <div class="error_explaination">
      <h3><%= @book.errors.count %> error prohibited this book from being sabed:</h3>
      <ul>
        <% @book.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="field">
    <label for="book_title">Title</label>
    <%= f.text_field :title %>
  </div>
  
  
  <div class="field">
    <label for="book_body">Body</label>
    <%= f.text_field :body %>
  </div>
  
  <div class="actions">
    <%= f.submit 'Update Book' %>
  </div>
  
<% end %>

  <%= link_to "Show", book_path(@book) %> | <%= link_to "Back", "/books" %>